[user]
name = XXX
email = XXX@example.com

[alias]
ci = commit
br = branch
co = checkout
sw = switch
re = restore
df = diff
pl = pull
sh = stash

b = branch -vv
bb = branch -avv
contains = branch --contains

f = fetch
ff = fetch --all --prune

all = log --oneline --decorate --graph --branches --tags --remotes

s = status -s
st = status

his = log --all --full-history
ignored-files = ls-files --other --ignored --exclude-standard

# dry run merge.
#   after: git merge --abort | git reset --hard HEAD
merge-n = merge --no-commit --no-ff

[pager]
log  = diff-highlight | less
show = diff-highlight | less
diff = diff-highlight | less

[pull]
ff = only

[rebase]
autostash = true

[init]
defaultBranch = main
